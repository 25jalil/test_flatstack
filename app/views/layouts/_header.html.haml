#logo
  = link_to root_path do
    = image_tag "download.png"
#menu_head
  .dropdown
    %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
      - if signed_in?
        - if current_user.admin?
          Admin menu
          %span.caret
        - else
          Menu
          %span.caret
    - if signed_in?
      - if current_user.admin?
        %ul.dropdown-menu{role: "menu"}
          %li= link_to "New event", new_event_path
          %li= link_to "Show events"
          %li= link_to "Calendar", root_path
      - else
        %ul.dropdown-menu{role: "menu"}
          %li= link_to "New event", new_event_path
          %li= link_to "Calendar", root_path

